<%= render "layout" %>

<ol class="breadcrumb">
    <li>
        <%= link_to "Surveys", survey_index_path %>
    </li>
    <li class="active">Add Survey</li>
</ol>

<h4 class="text-md-blue">Survey Details</h4>
<%= bootstrap_form_for @survey, url: {action: 'create'} do |f| %>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <%= f.text_field :title, class: "form-control" %>
                    <%= f.text_field :start_date, class: "datepicker form-control", placeholder: "yyyy-mm-dd" %>
                    <%= f.text_field :end_date, class: "datepicker form-control", placeholder: "yyyy-mm-dd" %>
                </div>
                <div class="col-sm-6">
                    <%= f.text_area :description, class: "form-control", rows: 7 %>
                </div>
            </div>
            <%= f.submit class: "btn btn-orange" %>
        </div>
    </div>
<% end %>
