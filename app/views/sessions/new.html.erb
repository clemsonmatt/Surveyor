<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="panel panel-default" style="margin-top: 120px;">
                <%= form_tag sessions_path do %>
                    <div class="text-center">
                        <h2 class="text-bright-blue" style="padding-top: 25px;">
                            <span style="position: relative; top: 5px;">surveyor
                        </h2>
                    </div>
                    <div class="panel-body" style="margin-top: 30px;">
                        <div class="input-group" style="margin-bottom: 15px;">
                            <span class="input-group-addon">
                                <%= material_icon.mail_outline %>
                            </span>
                            <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email...' %>
                        </div>

                        <div class="input-group" style="margin-bottom: 15px;">
                            <span class="input-group-addon">
                                <%= material_icon.lock_outline %>
                            </span>
                            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password...' %>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-bright-blue-simple btn-lg" type="submit">Login</button>
                    </div>
                    <br />
                <% end %>
            </div>
        </div>
    </div>
</div>
