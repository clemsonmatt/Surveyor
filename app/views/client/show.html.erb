<%= render 'layout' %>

<ol class="breadcrumb">
    <div class="links">
        <%= link_to edit_client_path(@client), class: 'btn-round btn-round-md btn-round-primary' do %>
            <%= material_icon.edit %>
        <% end %>
    </div>
    <li><%= link_to "Clients", client_index_path %></li>
    <li class="active"><%= @client %></li>
</ol>

<h3 class="text-md-blue"><%= @client %></h3>

<ul class="nav nav-tabs nav-justified">
    <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
    <li><a href="#notes" data-toggle="tab">Notes</a></li>
    <li><a href="#groups" data-toggle="tab">Groups</a></li>
</ul>

<div class="tab-content" style="margin-top: 30px;">
    <div class="tab-pane fade in active" id="info">
        <h4 class="text-md-blue">Info</h4>
        <div class="row">
            <div class="col-md-4">
                <center>
                    <div style="width: 200px; background-color: #f2f2f2; height: 200px; border-radius: 100px;"></div>
                </center>
            </div>
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>First Name</dt>
                    <dd><%= @client.first_name %></dd>
                    <dt>Last Name</dt>
                    <dd><%= @client.last_name %></dd>
                    <dt>Email</dt>
                    <dd><%= @client.email %></dd>
                    <dt>Phone</dt>
                    <dd><%= @client.phone ? @client.phone : '&mdash;'.html_safe %></dd>
                    <dt>Title</dt>
                    <dd><%= @client.title ? @client.title : '&mdash;'.html_safe %></dd>
                    <dt>Company</dt>
                    <dd><%= @client.company ? @client.company : '&mdash;'.html_safe %></dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="notes">
        <h4 class="text-md-blue">Notes</h4>
    </div>

    <div class="tab-pane fade" id="groups">
        <h4 class="text-md-blue">Groups</h4>
    </div>
</div>
