<%= render "manage/layout" %>

<ol class="breadcrumb">
    <div class="links">
        <%= link_to new_manage_person_path, class: 'btn-round btn-round-md btn-round-primary' do %>
            <%= material_icon.add %>
        <% end %>
    </div>
    <li>
        <%= link_to "People", manage_person_index_path %>
    </li>
    <li class="active">
        All People
    </li>
</ol>

<table class="table table-striped table-hover">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Status</th>
        <th style="width: 1%;"></th>
    </thead>
    <% @people.each do |person| %>
        <tr>
            <td><%= person.first_name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.email %></td>
            <td><%= person.active ? 'Active' : 'Inactive' %></td>
            <td>
                <%= link_to manage_person_path(person), class: 'btn-round btn-round-sm btn-round-primary' do %>
                    <%= material_icon.description.style('font-size: 16px;') %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
