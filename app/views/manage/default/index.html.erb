<%= render "manage/layout" %>

<ol class="breadcrumb">
    <li>
        <%= link_to "Manage", manage_default_index_path %>
    </li>
    <li class="active">
        People &amp; Permissions
    </li>
</ol>

<div class="row">
    <div class="col-md-8">
        <h4 class="text-md-blue">People</h4>
        <table class="table table-striped table-hover">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Status</th>
                <th style="width: 1%;"></th>
            </thead>
            <% @people.each do |person| %>
                <tr>
                    <td><%= person.first_name %></td>
                    <td><%= person.last_name %></td>
                    <td><%= person.email %></td>
                    <td><%= person.active ? 'Active' : 'Inactive' %></td>
                    <td>
                        <%= link_to manage_person_path(person), class: 'btn-round btn-round-sm btn-round-primary' do %>
                            <%= material_icon.description.style('font-size: 16px;') %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
    <div class="col-md-4">
        <h4 class="text-md-blue">Permissions</h4>
    </div>
</div>
